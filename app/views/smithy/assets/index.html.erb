<% content_for :title, "Assets" %>

<div class="well">
  <h2>Upload files</h2>
  <%= render :partial => "upload_form" %>
  <p>If you are using Firefox, Safari or Chrome, you can just drag and drop some files onto this page</p>
</div>

<%= paginate @assets %>

<div class="thumbnails" id="asset-thumbnails">
  <%= content_tag :table, id: "assets", class: "table table-striped responsive no-wrap display", data: { source: "#{ assets_url(format: "json") }" } do %>
    <thead>
      <th style="width:10%;">Preview</th>
      <th>Name</th>
      <th>Size</th>
      <th>Actions</th>
    </thead>
    <%= render @assets %>
  <% end %>
</div>
